@{
    Layout = "_LayoutSellers";
}
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title" style="font-size: 23px">QUẢN LÝ ĐƠN BÁN</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-inline my-2 my-lg-0">
                                    <input class="form-control mr-sm-2" type="search" placeholder="Nhập thông tin tìm kiếm..."
                                           aria-label="Search">
                                    <button class="btn btn-search my-2 my-sm-0" type="submit">Tìm kiếm</button>
                                </form>
                                <br>
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn hàng</th>
                                            <th>Ngày đặt hàng</th>
                                            <th>Tên khách hàng</th>
                                            <th>Số điện thoại</th>
                                            <th>Phương thức thanh toán</th>
                                            <th>Tổng tiền</th>
                                            <th>Tình trạng</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (HoaDon x in Model.content)
                                        {
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Ngay</td>
                                                <td>@x.TenKH</td>
                                                <td>@x.SDT</td>
                                                <td>@x.PhuongThucTT</td>
                                                <td>@x.TongTien</td>
                                                @if (@x.TrangThai == true)
                                                {
                                                    <td><span class="badge badge-complete">Complete</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="badge badge-pending">Pending</span></td>
                                                }
                                                <td>
                                                    <a href="@Url.Action("Detail", "OrderSeller", new { id = x.ID })" class="btn btn-outline-warning btn-sm">Xem Chi tiết</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div> <!-- /.row -->
                    </div>
                </div>
            </div><!-- /# column -->
        </div>

        <!-- /.content -->
        <!-- /.site-footer -->
    </div>
    <!-- /#right-panel -->
</div>