@{
    Layout = "_LayoutSellers";
}

@section Plugin1{
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title" style="font-size: 25px">TẠO CHƯƠNG TRÌNH KHUYẾN MÃI MỚI</strong>
                    </div>
                    <div class="card-body">
                        <strong class="card-title" style="font-size: 18px">Thông Tin Khuyến Mãi</strong>
                        <br>
                        <br>
                        <form action="#" method="post" enctype="multipart/form-data" class="form-horizontal">
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">
                                        Tên
                                        Chương Trình Khuyến Mãi
                                    </label>
                                </div>
                                <div class="col col-md-7">
                                    <input type="text" id="txt_ctkm" name="txt_ctkm"
                                           placeholder="" class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">
                                        Thời gian khuyến mãi
                                    </label>
                                </div>

                                <div class="col col-md-7">
                                    <input type="text" class="form-control" name="datetimes" onchange="pickdate(this)" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">
                                        Phần trăm khuyến mãi
                                    </label>
                                </div>
                                <div class="col col-md-7">
                                    <input type="text" id="txt_phantram" name="txt_phantram"
                                           placeholder="" class="form-control">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    <label for="text-input" class=" form-control-label">
                                    </label>
                                </div>
                                <div class="col col-md-7">
                                    <button class="btn btn-primary btn-primary-custom pull-right">Lưu và tiếp tục</button>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
            </div><!-- /# column -->
        </div>
    </div>
    <!-- /.content -->
</div>

@section Plugin2{
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

<script>
    $(function () {
        $('input[name="datetimes"]').daterangepicker({
            timePicker: true,
            startDate: moment().startOf('hour'),
            endDate: moment().startOf('hour').add(32, 'hour'),
            locale: {
                format: 'M/DD hh:mm A'
            }
        });
    });
</script>
<script>
    function pickdate(a) {
        console.log(a.value);
    }
</script>

}