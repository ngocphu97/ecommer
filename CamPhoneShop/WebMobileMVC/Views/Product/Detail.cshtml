
@{
    Layout = "_Layout";
}
<style>
    #img-preview img {
        width: 180px;
        height: 180px;
    }
</style>
<div class="content">
    <div class="animated fadeIn row">
        <div class="col-lg-12">
            <div class="card">

                <div class="card-header">
                    <strong class="card-title" style="font-size: 25px">CHI TIẾT SẢN PHẨM</strong>

                    <div class="action float-right">
                        <button class="btn btn-sm btn-warning btn-primary-custom" style="color: #ffffff">
